#! /Users/zxzx/.conda/envs/scrapy/bin/python
#coding=utf-8
import os,sys


help_txt = """
使用 zgrip -h 来获取帮助
使用 zgrip 关键字 在当前目录查询含有`关键字`的md文档
使用 zgrip 关键字 -d 路径 在指定目录查询含有`关键字`的md文档
使用 zgrip 关键字 -d 路径 -s 文件后缀 在指定目录查询含有`关键字`的指定后缀文档
"""

######################## 准备变量
search_dir = ''
keyword = ''
suffix = ''
count = ''

args = sys.argv
if len(args) > 1 and args[1] == '-h':
    print(help_txt)
if len(args) >= 2:
    keyword = sys.argv[1]

# 捕捉多余可选参数
opt_args = args[2:]
for i in range(len(opt_args)):
    if(opt_args[i] == '-s'):
        suffix = opt_args[i+1]
    if (opt_args[i] == '-d'):
        search_dir = opt_args[i+1]
    if (opt_args[i] == '-c'):
        count = opt_args[i+1]


######### 执行命令
search_dir = search_dir or '.'
suffix = suffix or 'md'
suffix = '.'+ suffix
count = count or '2'

command = 'find -L %s -name "*%s" | awk \'{a="\\"";print a $0 a}\' | xargs grep %s -n -B%s -A%s'%(search_dir, suffix, keyword, count, count)
# example as: find . -iname "*@make*.md"
######### 执行查询软链接命令
print("the command is: ", command)
ret = os.popen(command).readlines()


for line in ret:
    print(line, end='')






